<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.strelitzia.dao.DailyRemindMapper">
    <resultMap id="BaseResultMap" type="top.strelitzia.model.DailyRemindInfo">
        <result column="groupId" property="groupId" jdbcType="BIGINT"/>
        <result column="remindContent" property="remindContent" jdbcType="VARCHAR"/>
        <result column="dayLeft" property="dayLeft" jdbcType="INTEGER"/>
        <result column="userId" property="userId" jdbcType="BIGINT"/>
    </resultMap>

    <select id="getDailyRemindByGroupId" resultMap="BaseResultMap">
        SELECT groupId,
               remindContent,
               dayLeft,
               userId
        from a_reminder where groupId = #{groupId}
    </select>

    <insert id="insertDailyRemind">
        insert into a_reminder (groupId, remindContent,dayLeft,userId)
        values(#{groupId}, #{remindContent},#{dayLeft},#{userId})
    </insert>

    <update id="updateDayLeft">
        update a_reminder
        set
            dayLeft = #{dayLeft}
        where groupId = #{groupId} and remindContent = #{remindContent} and dayLeft = #{dayLeft} and userId = #{userId}
    </update>

    <delete id="deleteDailyRemind">
        DELETE from a_reminder where remindContent = #{remindContent} and groupId = #{groupId} and userId = #{userId}
    </delete>
</mapper>
